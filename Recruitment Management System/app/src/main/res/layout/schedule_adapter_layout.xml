<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="30dp"
    android:layout_marginBottom="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_iv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:text="Ali Haider, Bachelor in Physics"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:text="Ali Haider, Bachelor in Physics"
            android:textSize="18dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginTop="0dp"
            android:id="@+id/schedule_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_btn"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adpdate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:text="Date"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_btn"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/adptime_tv"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Time"
                        android:fontFamily="@font/lato"
                        android:textSize="17sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/phone_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/baseline_smartphone_24"/>

            </LinearLayout>


        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/view_cv_btn"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_bg_outlined">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:text="View CV"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/baseline_arrow_circle_right_24"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="10dp"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:id="@+id/remove_btn"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:background="@drawable/button_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/remove"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_forever_24"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:id="@+id/accept_btn"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/accept_tv"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/accept"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/baseline_check_circle_24"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>